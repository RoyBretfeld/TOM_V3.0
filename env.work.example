# TOM v3.0 - Environment Configuration (Arbeits-PC)
# Kopiere diese Datei zu .env und passe die Werte an

# ===== Realtime Backend =====
REALTIME_BACKEND=local
ALLOW_EGRESS=false  # Keine externen API-Calls auf Arbeit

# ===== Pfade (Arbeits-PC) =====
RECORD_PATH=C:\Temp\tom_audio
RECORD_AUDIO=false
RECORD_RETENTION_HOURS=24

# ===== WebSocket Gateway =====
WS_PUBLIC_URL=ws://localhost:8000/ws/stream
WS_HOST=0.0.0.0
WS_PORT=8000

# ===== Ollama (falls installiert) =====
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=llama3:instruct

# ===== Piper TTS =====
PIPER_VOICE=de_DE-thorsten-medium
PIPER_MODEL_PATH=data/models/piper/de_DE-thorsten-medium.onnx

# ===== WhisperX STT (falls GPU vorhanden) =====
WHISPER_MODEL=large-v3
WHISPER_DEVICE=cuda  # oder 'cpu' falls keine GPU
WHISPER_COMPUTE_TYPE=float16  # oder 'int8' f√ºr CPU

# ===== ChromaDB (falls installiert) =====
CHROMA_URL=http://localhost:8000
CHROMA_COLLECTION=tom_knowledge

# ===== Redis (falls installiert) =====
REDIS_URL=redis://localhost:6379/0

# ===== Security =====
JWT_SECRET=CHANGE_ME_ON_WORK_PC
PHONE_HASH_SALT=CHANGE_ME_ON_WORK_PC

# ===== Monitoring =====
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# ===== Logging =====
LOG_LEVEL=INFO
LOG_PATH=logs/

# ===== Testing =====
PYTEST_SKIP_GPU=false  # true falls keine GPU vorhanden
PYTEST_SKIP_INTEGRATION=false  # true falls keine Dienste laufen

# ===== FreeSWITCH (falls vorhanden) =====
FS_WSS_URL=wss://localhost:7443
FS_ESL_HOST=localhost
FS_ESL_PORT=8021
FS_ESL_PASSWORD=ClueCon

# ===== Fallback & Cost Logging =====
FALLBACK_POLICY=local_only
FALLBACK_TRIGGER_MS=800
FALLBACK_ERROR_BURST=3
PRICE_STT_PER_MIN=0.0
PRICE_TTS_PER_MIN=0.0
PRICE_LLM_PER_MIN=0.0

