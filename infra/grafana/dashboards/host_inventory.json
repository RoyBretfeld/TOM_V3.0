{
  "dashboard": {
    "title": "TOM v3 - Host Inventory & Readiness",
    "tags": ["tom", "inventory", "readiness", "hardware"],
    "timezone": "browser",
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Realtime Ready",
        "type": "stat",
        "targets": [
          {
            "expr": "tom_readiness_realtime"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0},
        "options": {
          "reduceOptions": {
            "calcs": ["lastNotNull"]
          },
          "orientation": "horizontal",
          "colorMode": "value",
          "graphMode": "none"
        },
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {
                "type": "value",
                "options": {
                  "0": {"text": "❌ No", "color": "red"},
                  "1": {"text": "✅ Yes", "color": "green"}
                }
              }
            ]
          }
        }
      },
      {
        "id": 2,
        "title": "Single-Agent Ready",
        "type": "stat",
        "targets": [
          {
            "expr": "tom_readiness_single_agent"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0},
        "options": {
          "reduceOptions": {"calcs": ["lastNotNull"]},
          "orientation": "horizontal",
          "colorMode": "value",
          "graphMode": "none"
        },
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {
                "type": "value",
                "options": {
                  "0": {"text": "❌ No", "color": "red"},
                  "1": {"text": "✅ Yes", "color": "green"}
                }
              }
            ]
          }
        }
      },
      {
        "id": 3,
        "title": "GPU Count",
        "type": "stat",
        "targets": [
          {
            "expr": "tom_gpu_count"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0},
        "fieldConfig": {
          "defaults": {
            "unit": "short"
          }
        }
      },
      {
        "id": 4,
        "title": "Max VRAM",
        "type": "stat",
        "targets": [
          {
            "expr": "max(tom_gpu_vram_bytes)"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0},
        "fieldConfig": {
          "defaults": {
            "unit": "decgbytes"
          }
        }
      },
      {
        "id": 5,
        "title": "GPU Inventory",
        "type": "table",
        "targets": [
          {
            "expr": "tom_gpu_vram_bytes",
            "legendFormat": "{{name}} ({{index}})"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
        "transformations": [
          {
            "id": "labelsToFields"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "decbytes"
          }
        }
      },
      {
        "id": 6,
        "title": "Services Status",
        "type": "table",
        "targets": [
          {
            "expr": "tom_service_up"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4},
        "transformations": [
          {
            "id": "labelsToFields"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {
                "type": "value",
                "options": {
                  "0": {"text": "❌ Down", "color": "red"},
                  "1": {"text": "✅ Up", "color": "green"}
                }
              }
            ]
          }
        }
      },
      {
        "id": 7,
        "title": "CPU Info",
        "type": "stat",
        "targets": [
          {
            "expr": "tom_host_cpu_info"
          }
        ],
        "gridPos": {"h": 6, "w": 24, "x": 0, "y": 12},
        "transformations": [
          {
            "id": "labelsToFields"
          }
        ]
      },
      {
        "id": 8,
        "title": "RAM Total",
        "type": "stat",
        "targets": [
          {
            "expr": "tom_host_ram_bytes"
          }
        ],
        "gridPos": {"h": 4, "w": 8, "x": 0, "y": 18},
        "fieldConfig": {
          "defaults": {
            "unit": "decgbytes"
          }
        }
      },
      {
        "id": 9,
        "title": "LLM Model",
        "type": "stat",
        "targets": [
          {
            "expr": "tom_llm_info"
          }
        ],
        "gridPos": {"h": 4, "w": 10, "x": 8, "y": 18},
        "transformations": [
          {
            "id": "labelsToFields"
          }
        ],
        "options": {
          "reduceOptions": {"calcs": ["lastNotNull"]}
        }
      },
      {
        "id": 10,
        "title": "GPU Driver",
        "type": "stat",
        "targets": [
          {
            "expr": "tom_gpu_driver_info"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 18},
        "transformations": [
          {
            "id": "labelsToFields"
          }
        ]
      },
      {
        "id": 11,
        "title": "GPU0 Utilization (DCGM)",
        "type": "gauge",
        "targets": [
          {
            "expr": "DCGM_FI_DEV_GPU_UTIL{gpu=\"0\"}"
          }
        ],
        "gridPos": {"h": 6, "w": 12, "x": 0, "y": 22},
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "max": 100,
            "min": 0
          }
        }
      },
      {
        "id": 12,
        "title": "GPU0 VRAM Used % (DCGM)",
        "type": "gauge",
        "targets": [
          {
            "expr": "100 * DCGM_FI_DEV_FB_USED{gpu=\"0\"} / DCGM_FI_DEV_FB_TOTAL{gpu=\"0\"}"
          }
        ],
        "gridPos": {"h": 6, "w": 12, "x": 12, "y": 22},
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "max": 100,
            "min": 0
          }
        }
      }
    ],
    "schemaVersion": 37,
    "version": 1
  }
}

