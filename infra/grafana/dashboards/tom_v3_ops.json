{
  "dashboard": {
    "title": "TOM v3.0 - Operations Dashboard",
    "tags": ["tom", "v3", "telephony", "ai"],
    "timezone": "browser",
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Telephony - Active Calls",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(tom_calls_active)"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Telephony - Call Duration",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, tom_telephony_call_duration_seconds)",
            "legendFormat": "p95"
          },
          {
            "expr": "histogram_quantile(0.50, tom_telephony_call_duration_seconds)",
            "legendFormat": "p50"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 6, "y": 0}
      },
      {
        "id": 3,
        "title": "Realtime Latency - E2E",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(tom_realtime_e2e_ms_bucket[5m])) by (le))",
            "legendFormat": "E2E p95"
          },
          {
            "expr": "histogram_quantile(0.50, sum(rate(tom_realtime_e2e_ms_bucket[5m])) by (le))",
            "legendFormat": "E2E p50"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4}
      },
      {
        "id": 4,
        "title": "Realtime Latency - Stages",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(tom_stage_latency_ms_bucket{stage=\"stt\"}[5m])) by (le))",
            "legendFormat": "STT"
          },
          {
            "expr": "histogram_quantile(0.95, sum(rate(tom_stage_latency_ms_bucket{stage=\"llm\"}[5m])) by (le))",
            "legendFormat": "LLM"
          },
          {
            "expr": "histogram_quantile(0.95, sum(rate(tom_stage_latency_ms_bucket{stage=\"tts\"}[5m])) by (le))",
            "legendFormat": "TTS"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4}
      },
      {
        "id": 5,
        "title": "GPU Memory Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "(dcgm_fb_used_bytes / dcgm_fb_total_bytes) * 100",
            "legendFormat": "GPU Memory %"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12}
      },
      {
        "id": 6,
        "title": "GPU Utilization",
        "type": "graph",
        "targets": [
          {
            "expr": "dcgm_gpu_utilization",
            "legendFormat": "GPU %"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12}
      },
      {
        "id": 7,
        "title": "RL - Rewards over Time",
        "type": "graph",
        "targets": [
          {
            "expr": "avg_over_time(tom_rl_reward_average[10m])",
            "legendFormat": "Avg Reward"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 20}
      },
      {
        "id": 8,
        "title": "RL - Active Variants",
        "type": "stat",
        "targets": [
          {
            "expr": "tom_rl_active_variants_total"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 20}
      },
      {
        "id": 9,
        "title": "RL - Blacklisted Variants",
        "type": "stat",
        "targets": [
          {
            "expr": "tom_rl_blacklisted_variants_total"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 20}
      },
      {
        "id": 10,
        "title": "429 Ratio (5m)",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(rate(tom_ws_gateway_http_responses_total{code=\"429\"}[5m])) / sum(rate(tom_ws_gateway_http_responses_total[5m])) * 100"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 28}
      },
      {
        "id": 11,
        "title": "Audio Drop % (5m)",
        "type": "stat",
        "targets": [
          {
            "expr": "(increase(tom_audio_frames_dropped_total[5m]) / clamp_min(increase(tom_audio_frames_sent_total[5m]), 1)) * 100"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 28}
      },
      {
        "id": 12,
        "title": "Minutes since Synthetic",
        "type": "stat",
        "targets": [
          {
            "expr": "(time() - tom_synth_call_last_success_timestamp_seconds) / 60"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 28}
      },
      {
        "id": 13,
        "title": "ToolHub - Quellenmix",
        "type": "bargraph",
        "targets": [
          {
            "expr": "sum by (source) (tom_tool_calls_total)",
            "legendFormat": "{{source}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 36}
      },
      {
        "id": 14,
        "title": "ToolHub - Source Latency",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(tom_tool_latency_ms_bucket{source=~\"autoteilepilot|pdf_catalog|chromadb\"}[5m])) by (source, le))",
            "legendFormat": "{{source}} p95"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 36}
      },
      {
        "id": 15,
        "title": "Errors by Component",
        "type": "table",
        "targets": [
          {
            "expr": "sum by (component) (tom_errors_total)",
            "legendFormat": "{{component}}"
          }
        ],
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 44}
      }
    ],
    "annotations": {
      "list": []
    },
    "schemaVersion": 30,
    "version": 1
  }
}

