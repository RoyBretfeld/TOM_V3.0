# TOM v3.0 - Hybrid Realtime Configuration
# Lokale GPU-beschleunigte Services

# STT-Konfiguration (WhisperX)
REALTIME_STT=local
# REALTIME_STT=mock  # Für Mock-Modus

# LLM-Konfiguration (Ollama)
REALTIME_LLM=local
# REALTIME_LLM=mock  # Für Mock-Modus

# TTS-Konfiguration (Piper)
REALTIME_TTS=local
# REALTIME_TTS=mock  # Für Mock-Modus

# Ollama-Konfiguration
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama2

# Piper-Konfiguration
PIPER_VOICE=de_DE-thorsten-medium
PIPER_MODEL_PATH=./models/piper/

# WhisperX-Konfiguration
WHISPERX_MODEL=large-v3
WHISPERX_LANGUAGE=de
WHISPERX_DEVICE=cuda

# Performance-Konfiguration
MAX_CONCURRENT_STREAMS=5
STREAM_TIMEOUT=30

# DEV-Flags
DEV_ALLOW_NO_JWT=true
DEV_MOCK_DELAYS=false
DEV_MOCK_DELAY_MS=10

# Logging
LOG_LEVEL=INFO
