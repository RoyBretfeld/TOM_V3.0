# TOM v3.0 - Environment Configuration für Loop Closure

# === Grundkonfiguration ===
APP_ENV=dev
LOG_LEVEL=INFO
PYTHONUTF8=1
PYTHONIOENCODING=utf-8

# === Realtime Feature-Flags ===
# Mögliche Werte: off, mock, provider, local
REALTIME_STT=off
REALTIME_LLM=mock
REALTIME_TTS=mock

# === DEV-Flags (nur für Entwicklung) ===
DEV_ALLOW_NO_JWT=true
DEV_MOCK_DELAYS=true
DEV_MOCK_DELAY_MS=50

# === WebSocket & Authentifizierung ===
WEBSOCKET_PORT=8080
JWT_SECRET=change_me_in_production
REDIS_URL=redis://localhost:6379/0

# === LLM Provider-Konfiguration ===
LLM_PROVIDER_URL=https://api.openai.com
LLM_PROVIDER_KEY=your_openai_api_key_here
LLM_MODEL=gpt-3.5-turbo

# === TTS Local-Konfiguration (Piper) ===
TTS_PIPER_PATH=/usr/local/bin/piper
TTS_VOICE=de_DE-thorsten-medium

# === Performance-Konfiguration ===
MAX_CONCURRENT_STREAMS=10
STREAM_TIMEOUT=30
MAX_CONCURRENT_CALLS=10

# === Audio-Konfiguration ===
AUDIO_SAMPLE_RATE=16000
AUDIO_CHUNK_SIZE=1024

# === Monitoring ===
PROM_PORT=9090

# === Probe-Konfiguration ===
PROBE_ITERATIONS=5
WEBSOCKET_URL=ws://localhost:8080/ws/stream
JWT_TOKEN=dev_token
